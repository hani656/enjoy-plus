<!-- 作为页面的根节点 -->
<authorization>
  <view class="profile">
    <van-cell center title="头像">
      <van-icon slot="right-icon" name="arrow" size="16" color="#c3c3c5" />
      <button class="button" size="mini" hover-class="none" bind:chooseavatar="getUserAvatar" open-type="chooseAvatar">
        <image class="avatar" src="{{avatar}}"></image>
      </button>
    </van-cell>
    <van-field
      center
      label="昵称"
      input-align="right"
      bind:blur="getUserNickname"
      type="nickname"
      value="{{nickName || '微信用户'}}"
      placeholder="请输入昵称"
    />
  </view>
</authorization>
